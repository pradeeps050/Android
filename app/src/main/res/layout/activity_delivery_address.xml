<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".feature.deliveryaddress.ui.DeliveryAddressActivity">

        <include
            android:id="@+id/blacktoolbar"
            layout="@layout/blacktoolbar" />

        <android.support.v7.widget.CardView
            android:id="@+id/mycard1_cardview"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_100"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_10">

            <RelativeLayout
                android:id="@+id/rel1_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/akshay1_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_10"
                    android:fontFamily="Roboto-Medium"
                    android:text="address1"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_14"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/pen1_img"
                    android:layout_width="@dimen/dp_19"
                    android:layout_height="@dimen/dp_19"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_15"
                    app:srcCompat="@drawable/ic_icon_edit_c" />

                <TextView
                    android:id="@+id/cardnum1_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/akshay1_txt"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_10"
                    android:fontFamily="Roboto-Medium"
                    android:text="Address"
                    android:textColor="@color/shadowblack"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:id="@+id/cardnumber1_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_40"
                    android:layout_toRightOf="@+id/cardnum1_txt"
                    android:fontFamily="Roboto-Medium"
                    android:text="@string/address1"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_14" />

                <ImageView
                    android:id="@+id/del_img1"
                    android:layout_width="@dimen/dp_19"
                    android:layout_height="@dimen/dp_19"
                    android:layout_below="@+id/pen1_img"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="15dp"
                    app:srcCompat="@drawable/ic_icon_delete" />


                <TextView
                    android:id="@+id/expiry_txt1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/cardnum1_txt"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="Roboto-Medium"
                    android:text="mobile : 897676577"
                    android:textColor="@color/shadowblack"
                    android:textSize="@dimen/sp_14" />


            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/mycard2_cardview"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_100"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_10">

            <RelativeLayout
                android:id="@+id/rel2_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/akshay2_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_10"
                    android:fontFamily="Roboto-Medium"
                    android:text="address2"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_14"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/pen2_img"
                    android:layout_width="@dimen/dp_17"
                    android:layout_height="@dimen/dp_17"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_15"
                    app:srcCompat="@drawable/ic_icon_edit_c" />

                <TextView
                    android:id="@+id/cardnum2_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/akshay2_txt"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_10"
                    android:fontFamily="Roboto-Medium"
                    android:text="Address"
                    android:textColor="@color/shadowblack"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:id="@+id/cardnumber2_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_40"
                    android:layout_toRightOf="@+id/cardnum2_txt"
                    android:fontFamily="Roboto-Medium"
                    android:text="@string/address2"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_14" />


                <ImageView
                    android:id="@+id/del_img2"
                    android:layout_width="19dp"
                    android:layout_height="19dp"
                    android:layout_below="@+id/pen2_img"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="15dp"
                    app:srcCompat="@drawable/ic_icon_delete" />


                <TextView
                    android:id="@+id/expiry_txt2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/cardnum2_txt"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="Roboto-Medium"
                    android:text="Mobile"
                    android:textColor="@color/shadowblack"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:id="@+id/expirydate2_txt2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/cardnum2_txt"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@+id/expiry_txt2"
                    android:fontFamily="Roboto-Medium"
                    android:hint="4/12"
                    android:text="@string/mobilenum"
                    android:textColor="@color/shadowblack"
                    android:textSize="@dimen/sp_14" />


            </RelativeLayout>

        </android.support.v7.widget.CardView>


    </LinearLayout>

</layout>