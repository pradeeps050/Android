<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View"/>
    </data>

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
        android:orientation="vertical"
    tools:context=".feature.editprofile.ui.EditProfileActivity">

        <include android:id="@+id/blacktoolbar"
            layout="@layout/blacktoolbar"/>


        <TextView
            android:id="@+id/name_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/profile_holder_name"
            android:fontFamily="Roboto-Regular"
            android:textColor="@color/shadowblack"
            android:textSize="@dimen/sp_14"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginLeft="@dimen/dp_22"/>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/name_txtlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/username_edt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/akshay"
            android:background="@null"
            android:fontFamily="Roboto-Regular"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_16"
            android:padding="@dimen/dp_6"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_10" />
        </android.support.design.widget.TextInputLayout>

        <View
            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"
            android:background="@color/shadowblack" />

        <TextView
            android:id="@+id/emaiaddress_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/email_address"
            android:fontFamily="Roboto-Regular"
            android:textColor="@color/shadowblack"
            android:textSize="@dimen/sp_12"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginLeft="@dimen/dp_22"/>

        <EditText
            android:id="@+id/emailaddress_edt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/mailId"
            android:fontFamily="Roboto-Regular"
            android:background="@null"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_16"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_20"/>

        <View
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="@dimen/dp_20"
            android:background="@color/shadowblack" />


        <TextView
            android:id="@+id/mobile_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/mobile"
            android:fontFamily="Roboto-Regular"
            android:textColor="@color/shadowblack"
            android:textSize="@dimen/sp_12"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginLeft="@dimen/dp_22"/>

        <EditText
            android:id="@+id/mobilenum_edt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/mobilenum"
            android:fontFamily="Roboto-Regular"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_16"
            android:background="@null"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_20"/>
        <View
            android:id="@+id/view3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_20"
            android:background="@color/shadowblack" />


        <TextView
            android:id="@+id/address_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/address"
            android:fontFamily="Roboto-Regular"
            android:textColor="@color/shadowblack"
            android:textSize="@dimen/sp_12"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginLeft="@dimen/dp_22"/>

        <EditText
            android:id="@+id/address_edt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/user_address"
            android:fontFamily="Roboto-Regular"
            android:textColor="@color/black"
            android:background="@null"
            android:textSize="@dimen/sp_16"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_20"/>

        <View
            android:id="@+id/view4"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"
            android:background="@color/shadowblack"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/save_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/save"
                android:textColor="@color/white"
                android:background="@color/lightpurple"
                android:fontFamily="Roboto-Medium"
                android:textSize="@dimen/btn_txt"
                android:layout_alignParentBottom="true"/>
        </RelativeLayout>



    </LinearLayout>

</layout>