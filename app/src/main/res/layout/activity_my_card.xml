<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View"></import>
    </data>


   <LinearLayout
   android:layout_width="match_parent"
    android:layout_height="match_parent"
       android:orientation="vertical"
    tools:context=".feature.mycard.ui.MyCardActivity">

       <include android:id="@+id/black_toolbar"
       layout="@layout/blacktoolbar"/>

   <android.support.v7.widget.CardView
       android:id="@+id/mycard_cardview"
       android:layout_width="match_parent"
       android:layout_height="100dp"
       android:layout_marginLeft="10dp"
       android:layout_marginTop="10dp"
       android:layout_marginRight="10dp">

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical">

       <LinearLayout
           android:id="@+id/lin_layout"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal">

           <TextView
               android:id="@+id/akshay_txt"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginTop="10dp"
               android:fontFamily="Roboto-Medium"
               android:text="@string/akshay"
               android:textColor="@color/black"
               android:textSize="@dimen/edit_text"
               android:layout_marginLeft="15dp"
               android:textStyle="bold" />
           <View
               android:layout_width="0dp"
               android:layout_height="1dp"
               android:layout_weight="1"/>

           <ImageView
               android:id="@+id/pen_img"
               android:layout_width="12dp"
               android:layout_height="match_parent"
               android:layout_gravity="right"
               android:layout_marginTop="10dp"
               android:layout_marginRight="15dp"
               app:srcCompat="@drawable/ic_icon_edit_c" />
       </LinearLayout>

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal">
       <TextView
           android:id="@+id/cardnum_txt"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_below="@+id/akshay_txt"
           android:textColor="@color/shadowblack"
           android:text="@string/card_num"
           android:textSize="@dimen/edit_text"
           android:layout_marginLeft="15dp"
           android:fontFamily="Roboto-Medium"
           android:layout_marginTop="10dp"/>

           <TextView
               android:id="@+id/cardnumber_txt"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_below="@+id/akshay_txt"
               android:textColor="@color/black"
               android:textSize="@dimen/edit_text"
               android:text="@string/xxxx_xxxx_7987"
               android:layout_toRightOf="@+id/cardnum_txt"
               android:layout_marginLeft="15dp"
               android:fontFamily="Roboto-Medium"
               android:layout_marginTop="10dp"/>

           <View
               android:layout_width="0dp"
               android:layout_height="1dp"
               android:layout_weight="1"/>

           <ImageView
           android:id="@+id/del_img"
           android:layout_width="19dp"
           android:layout_height="19dp"
           app:srcCompat="@drawable/ic_icon_delete"
           android:layout_alignParentRight="true"
           android:layout_below="@+id/pen_img"
           android:layout_marginRight="15dp"
           android:layout_marginTop="10dp"/>

           </LinearLayout>

           <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal">

           <TextView
           android:id="@+id/expiry_txt"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="@string/expiry"
           android:layout_below="@id/cardnum_txt"
           android:textSize="@dimen/edit_text"
           android:fontFamily="Roboto-Medium"
           android:textColor="@color/shadowblack"
           android:layout_marginLeft="15dp"
           android:layout_marginTop="10dp"/>

           <TextView
               android:id="@+id/expirydate_txt"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_below="@id/cardnum_txt"
               android:layout_toRightOf="@id/expiry_txt"
               android:text="@string/expirydate1"
               android:textSize="@dimen/edit_text"
               android:fontFamily="Roboto-Medium"
               android:textColor="@color/shadowblack"
               android:layout_marginLeft="15dp"
               android:layout_marginTop="10dp"/>
       </LinearLayout>

       </LinearLayout>
</android.support.v7.widget.CardView>




   <android.support.v7.widget.CardView
       android:id="@+id/mycard2_cardview"
       android:layout_width="match_parent"
       android:layout_height="100dp"
       android:layout_marginLeft="10dp"
       android:layout_marginTop="15dp"
       android:layout_marginRight="10dp">

       <RelativeLayout
           android:id="@+id/rel2_layout"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">

           <TextView
               android:id="@+id/akshay2_txt"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="@string/akshay"
               android:layout_marginLeft="15dp"
               android:textSize="@dimen/edit_text"
               android:fontFamily="Roboto-Medium"
               android:textColor="@color/black"
               android:layout_marginTop="10dp"
               android:textStyle="bold"/>

           <ImageView
               android:id="@+id/pen2_img"
               android:layout_width="17dp"
               android:layout_height="17dp"
               app:srcCompat="@drawable/ic_icon_edit_c"
               android:layout_alignParentRight="true"
               android:layout_marginRight="15dp"
               android:layout_marginTop="10dp"/>

           <TextView
               android:id="@+id/cardnum2_txt"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_below="@+id/akshay2_txt"
               android:textColor="@color/shadowblack"
               android:textSize="@dimen/edit_text"
               android:text="@string/card_num2"
               android:layout_marginLeft="15dp"
               android:fontFamily="Roboto-Medium"
               android:layout_marginTop="10dp"/>

           <TextView
               android:id="@+id/cardnumber2_txt"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textColor="@color/black"
               android:textSize="@dimen/edit_text"
               android:text="@string/xxxx_xxxx_7986"
               android:layout_marginTop="40dp"
               android:layout_marginLeft="15dp"
               android:layout_toRightOf="@+id/cardnum2_txt"
               android:fontFamily="Roboto-Medium"
               />


           <ImageView
               android:id="@+id/del_img2"
               android:layout_width="19dp"
               android:layout_height="19dp"
               app:srcCompat="@drawable/ic_icon_delete"
               android:layout_alignParentRight="true"
               android:layout_below="@+id/pen2_img"
               android:layout_marginRight="15dp"
               android:layout_marginTop="10dp"/>


           <TextView
               android:id="@+id/expiry_txt2"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="@string/expiry"
               android:layout_below="@id/cardnum2_txt"
               android:textSize="@dimen/edit_text"
               android:fontFamily="Roboto-Medium"
               android:textColor="@color/shadowblack"
               android:layout_marginTop="10dp"
               android:layout_marginLeft="15dp"/>

           <TextView
               android:id="@+id/expirydate2_txt2"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:hint="4/12"
               android:text="@string/expirydate2"
               android:layout_below="@id/cardnum2_txt"
               android:layout_toRightOf="@+id/expiry_txt2"
               android:textSize="@dimen/edit_text"
               android:fontFamily="Roboto-Medium"
               android:textColor="@color/shadowblack"
               android:layout_marginTop="10dp"
               android:layout_marginLeft="15dp"/>


       </RelativeLayout>

   </android.support.v7.widget.CardView>


<RelativeLayout
   android:layout_width="match_parent"
   android:layout_height="wrap_content"
   android:layout_gravity="bottom">
   <Button
       android:id="@+id/add_new_card_btn"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_gravity="bottom"
       android:background="@color/lightpurple"
       android:text="@string/add_new_card"
       android:layout_alignParentBottom="true"
       android:textColor="@color/white"
       android:textSize="@dimen/edit_text" />
</RelativeLayout>
  </LinearLayout>

    </layout>

