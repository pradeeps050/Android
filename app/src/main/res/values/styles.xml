<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/popup_grey</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/white</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.NoActionBar." parent="Theme.AppCompat.Light.NoActionBar">
    </style>

    <style name="AppTheme.BlackActionBar" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/light_gray</item>
    </style>
    
    <style name="AppTheme.RoundShapeButton" parent="Widget.AppCompat.Button.Colored">
        <item name="android:background">@drawable/round_shape_button</item>
    </style>



    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="EditTextLineDateTimeScreen" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorControlNormal">#FFFFFF</item>
        <item name="colorControlActivated">#FFFFFF</item>
        <!--<item name="colorControlHighlight">@color/accent</item>-->
    </style>

    <style name="EditTextLine" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorControlNormal">#c5c5c5</item>
        <item name="colorControlActivated">#d2d2d2</item>
        <!--<item name="colorControlHighlight">@color/accent</item>-->
    </style>


   <!-- <style name="BlackToolbarTheme" parent="AppTheme">
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/black</item>
    </style>-->

    <style name="MyRadioButton" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/black</item>
        <item name="colorControlActivated">@color/greencolor</item>
    </style>
    
    <style name="AppTheme.BottomButtonStyle" parent="Widget.AppCompat.Button.Colored">
        <item name="android:textColor">@color/white</item>
    </style>

     <style name="AppTheme.TextFont" parent="android:Widget.TextView">
        <!--<item name="android:fontFamily">@font/roboto</item>-->
    </style>

    <style name="PinEditTextStyle">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:cursorVisible">false</item>
        <item name="android:maxLength">1</item>
        <item name="android:minEms">2</item>
        <item name="android:inputType">number</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
    </style>

    <style name="CartButton" parent="Widget.AppCompat.Button.Colored">
        <item name="android:background">@drawable/cart_button</item>
        <item name="android:textColor">@color/button_color</item>
    </style>
    <style name="MyCheckButton" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/black</item>
        <item name="colorControlActivated">@color/greencolor</item>
    </style>

</resources>
